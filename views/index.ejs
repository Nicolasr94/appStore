<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="./" />
</head>
<body>
    <p>Facturador</p>
    <table class="facturador">
        <h3>Cliente <%= data.cliente %></h3>
        <tr class="encabezado">
            <td>Cantidad</td>
            <td>Producto</td>
            <td>Precio</td>
            <td>Subtotal</td>
        </tr>
        <% let total %>
        <% data.productos.forEach ((item) => { %>
            <tr class="item"> 
                <td><%=item.cantidad %></td>
                <td><%=item.nombre %></td>
                <td><%=item.precio %></td>
                <% let subTotal = item.precio * item.cantidad  %> 
                <td><%= subTotal %></td>
                <% total = subTotal  %>
            </tr>
            <%});%>
    </table>
    <footer>
        <h3>TOTAL</h3>
        <h4><%= total %></h4>
    </footer>
</body>
</html>